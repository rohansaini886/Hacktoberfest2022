import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner input = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int x = input.nextInt();
        if(x%2==0){
            System.out.print("Number given is even.");
        }
        else {
            System.out.print("Number given is odd.");
        }
    }
}
